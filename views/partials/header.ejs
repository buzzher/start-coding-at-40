<html>
    <head>
        <title>Learn Coding After 40</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'>
        <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.css'>
        <link rel='stylesheet' type='text/css' href='/stylesheets/app.css'>
    </head>
    <body>
        
<nav class='navbar navbar-default'>
   <div class='container-fluid'>
      <div class='navbar-header'>
         <a class='navbar-brand' href='/'>Home</a>
         <a href='/index/new' class='navbar-brand'>New Post</a>
      </div> <!-- /navbar-header -->
      <div class='collapse navbar-collapse'>
        <ul class='nav navbar-nav navbar-right'>
                    <!--if no user-->
            <% if(!currentUserCodes) { %>
                <li class=''><a href='/login'>Login</a><li>
                <li class=''><a href='/register'>Sign Up</a><li>
            <% } else { %> <!-- if user signin -->
                <li class=''><a href='#'>Login As <%= currentUserCodes.username %></a><li>
                <li class=''><a href='/logout'>Log Out</a><li>
            <% } %>
                
        </ul>
      </div> <!-- /collapse -->
   </div> <!-- /container-fluid -->
</nav>

<div class="container">
   <% if(error && error.length > 0) { %>
      <div class="alert alert-danger" role="alert">
         <%= error %>
      </div>
   <% } %>
   <% if(success && success.length > 0) { %>
      <div class="alert alert-success" role="alert">
         <%= success %>
      </div>
   <% } %>
</div>