<html>
   <head>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>Learn Coding After 40</title>
      <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Shrikhand" rel="stylesheet">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
      <link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.css'>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
      <link rel='stylesheet' type='text/css' href='/stylesheets/app.css'>
   </head>
   <body>
        
<nav class="navbar navbar-expand-lg navbar-light  navbar-dark bg-dark">
   <div class="container">
      <a class="btn btn-outline-primary" href="/index_temp"><i class="fa fa-code" aria-hidden="true"></i> Start Code</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
         <ul class="navbar-nav mr-auto">
            <li class="nav-item">
               <a class="nav-link" href="/index" data-target=".navbar-collapse.show">Home</a>
            </li class="nav-item">
               <a class="nav-link" href="/about" data-target=".navbar-collapse.show">About</a>
            </li>
          
            <li class="nav-item">
               <a class="nav-link" href="/contact" data-target=".navbar-collapse.show">Contact</a>
            </li>
            
         </ul>
         <ul class="nav navbar-nav navar-right">
            <!--if no user-->
            <% if(!currentUserCodes) { %>
               <li class="nav-item">
                  <a class="nav-link" href="/register"><i class="fa fa-user-plus" aria-hidden="true"></i> Signup</a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" href="/login"><i class="fa fa-user" aria-hidden="true"></i> Login</a>
               </li>
            <% } else { %> <!-- if user signin -->
               <li class='nav-item'>
                  <a class="nav-link active" href='#'>Login As <%= currentUserCodes.username %></a>
               <li>
               <li class='nav-item'>
                  <a class="nav-link" href='/logout'> <i class="fa fa-sign-out" aria-hidden="true"></i> Log Out</a>
               <li>
            <% } %>
         </ul>
      </div>
  </div>
</nav>

<div class="container">
   <% if(error && error.length > 0) { %> <!-- error.length > 0, empty arr can be true like - if([]) { console.log('Hello) } google dev tool -->
      <div class="alert alert-danger" role="alert">
         <%= error %>
      </div>
   <% } %>
   <% if(success && success.length > 0) { %>
      <div class="alert alert-success" role="alert">
         <%= success %>
      </div>
   <% } %>
</div>


